.service-title
  width 1200px
  height 85px
  margin 0 auto
  line-height 85px
  font-weight bold
  color black
  font-size 25px
.service-content
  width 1200px
  height 100%
  margin 0 auto
  display flex
  .left
    width 970px
    height 100%
    .left-content
      width 100%
      height 100%
      display flex
      flex-wrap wrap
      .banner-item
        width 232px
        height 300px
        border 1px solid #eeeeee
        margin 0 8px 8px 0
        .img img
          width 210px
          height 210px
          margin 10px 0 0 10px
        .banner-title
          margin-top 15px
          margin-left 10px
          height 26px
          .iconfont
            font-size 25px
          span
            font-size 18px
            font-weight bold
        .banner-top
          margin  15px 10px
          width 190px
          height 26px
          display flex
          justify-content space-between
          font-size 12px
          color #929292;
        &:hover
          box-shadow 5px 5px 10px #ccc
    .more-content
      cursor pointer
      margin 80px auto
      width 200px
      height 50px
      line-height 50px
      text-align center
      border-radius 10px
      border 1px solid #eeeeee
  .right
    width 230px
    height 100%
    .app
      position relative
      margin-top 15px
      .img
        width 180px
        height 180px
        position absolute
        left 25px
        top 25px
